@model UCRMS.Models.EnrollCourses
@{
    ViewBag.Title = "EnrollCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> Record is/are save Successfully ..
    </div>
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="thumbnail">
            <legend>Enroll In a Course</legend>
            <form class="form-horizontal" method="POST">
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(c => c.RegNo)
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownListFor(c => c.RegNo, ViewBag.CorShLst as IEnumerable<SelectListItem>, "Select..", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(c => c.Name)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(c => c.Email)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(c => c.Department)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(c => c.Department, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(c => c.Course)
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownListFor(c => c.Course, ViewBag.SmList as IEnumerable<SelectListItem>, "Select..", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(c => c.Date)
                    </div>
                    <div class="col-md-8">
                        @*@Html.TextBoxFor(c => c.Date, new { @class = "form-control" })*@
                        <input type="date" data-date-format="dd/MM/yyyy" name="Date" class="form-control" required />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-floppy-disk">Enroll</i></button>
                    </div>
                </div>
            </form>
            <script src="~/Scripts/jquery-1.10.2.js"></script>
            
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="thumbnail">
            <legend>View All Enroll Course</legend>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="bg-primary">
                        <tr>
                            <th>Student Name</th>
                            <th>Email</th>
                            <th>Contract No</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*@foreach (CourseAssign courseAssign in ViewBag.TeacherList)
                            {
                                <tr>
                                    <td>@courseAssign.Department</td>
                                    <td>@courseAssign.Teacher</td>
                                    <td>@courseAssign.CourseID</td>
                                    <td>@courseAssign.Credit</td>
                                </tr>
                            }*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
